@page "{shortenedUrl?}"
@model IndexModel
@{
    ViewData["Title"] = "URL Shortener";
}

<div >
    <!-- Main content -->
    <div class="flex flex-col items-center justify-center min-h-screen px-4">
        <div class="text-center space-y-8 py-16">
            <h1 class="text-4xl md:text-6xl lg:text-8xl font-extrabold text-white">
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-100">
                    Transform Your Links
                </span>
            </h1>
            <p class="text-xl md:text-2xl text-white/80 max-w-2xl mx-auto">
                Create short, powerful links in seconds
            </p>

            <!-- Form with glass effect -->
            <div class="mt-12 max-w-xl mx-auto backdrop-blur-xl bg-white/10 p-8 rounded-2xl shadow-2xl border border-white/20">
                <form method="post" class="space-y-6">
                    <div class="relative group">
                        <input type="text" 
                               placeholder="Paste your long URL here" 
                               name="originalUrl"
                               class="w-full px-5 py-4 text-lg bg-white/20 border-2 border-white/30 rounded-xl 
                                      text-white placeholder-white/60 backdrop-blur
                                      focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent
                                      transition-all duration-300 ease-in-out"/>
                    </div>

                    <button type="submit"
                            class="w-full md:w-auto px-8 py-4 text-lg font-semibold text-purple-600 
                                   bg-white rounded-xl hover:bg-purple-50 
                                   transform hover:scale-105 transition-all duration-300 
                                   shadow-lg hover:shadow-xl
                                   focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 
                                   focus:ring-offset-purple-600">
                        Shorten URL
                        <span class="ml-2">→</span>
                    </button>
                </form>
            </div>

            <!-- Additional features section -->
            <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8 text-white/90">
                <div class="p-6 rounded-xl backdrop-blur-sm bg-white/5 border border-white/10 hover:bg-white/10 transition-all">
                    <h3 class="text-xl font-semibold mb-2">Lightning Fast</h3>
                    <p>Generate short URLs instantly</p>
                </div>
                <div class="p-6 rounded-xl backdrop-blur-sm bg-white/5 border border-white/10 hover:bg-white/10 transition-all">
                    <h3 class="text-xl font-semibold mb-2">Secure</h3>
                    <p>Your links are safe with us</p>
                </div>
                <div class="p-6 rounded-xl backdrop-blur-sm bg-white/5 border border-white/10 hover:bg-white/10 transition-all">
                    <h3 class="text-xl font-semibold mb-2">Simple</h3>
                    <p>No registration required</p>
                </div>
            </div>
        </div>
    </div>
</div>